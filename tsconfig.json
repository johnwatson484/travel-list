{
  "compilerOptions": {
    "outDir": "./src/dist",
    "target": "es2022",
    "module": "NodeNext",
    "typeRoots": ["./node_modules/@types", "src/types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
